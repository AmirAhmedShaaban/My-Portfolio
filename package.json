{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "portfolio project",
  "license": "ISC",
  "author": "Amir",
  "type": "commonjs",
  "main": "index.js",
  "scripts": {
    "watch:sass": "sass sass/main.scss public/css/style.css -w",
    "devserver": "live-server public",
    "start": "npm-run-all --parallel devserver watch:sass",
    "compile:sass": "sass sass/main.scss public/css/style.comp.css",
    "prefix:css": "postcss public/css/style.comp.css -o public/css/style.prefix.css",
    "compress:css": "postcss public/css/style.prefix.css -u cssnano -o public/css/style.css",
    "build:css": "npm-run-all compile:sass prefix:css compress:css"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.21",
    "concat": "^1.0.3",
    "cssnano": "^7.1.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.5.6",
    "postcss-cli": "^11.0.1",
    "sass": "^1.89.2"
  }
}
